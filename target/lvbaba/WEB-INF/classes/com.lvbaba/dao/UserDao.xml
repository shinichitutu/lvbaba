<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lvbaba.dao.UserDao">
    <sql id="all_field">
        u_name,u_username,u_password,u_level,balance
    </sql>
    <insert id="insertUser" parameterType="User">
        insert into user(<include refid="all_field"/>)values(#{user.uName},#{user.uUsername},#{user.uPassword},#{user.uLevel),#{user.banlance})
    </insert>

    <update id="updateUser">
        update user
        <set>
            <if test="uName!=null and uName!=''">u_name=#{user.uName},</if>
            <if test="uUsername!=null and uUsername!=''">u_username=#{user.uUsername},</if>
            <if test="uPassword!=null and uPassword!=''">u_password=#{user.uPassword},</if>
            <if test="uLevel!=null and uLevel!=''">u_level=#{user.uLevel},</if>
            <if test="balance!=null and balance!=''">balance=balance+#{user.balance}</if>
        </set> where u_id = #{user.uId}
    </update>

    <select id="queryByUserName" resultMap="userMap" parameterType="User">
        select uid,<include refid="all_field"/> from user where u_username = #{user.uUsername}
    </select>
    <resultMap id="userMap" type="User">
        <id property="uId" column="u_id"/>
        <result property="uName" column="u_name"/>
        <result property="uUsername" column="u_username"/>
        <result property="uPassword" column="u_password"/>
        <result property="uLevel" column="u_level"/>
        <result property="balance" column="balance"/>
    </resultMap>
</mapper>